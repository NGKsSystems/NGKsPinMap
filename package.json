{
  "name": "ngks-pin-map",
  "version": "1.0.0",
  "description": "NGKs Pin Map Electron Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build": "electron-builder --win --mac --linux",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.ngks.pinmap",
    "productName": "NGKs Pin Map",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md",
      "!create_icon.py"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "arch": ["x64"]
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "author": "NGKs Systems",
  "license": "MIT"
}